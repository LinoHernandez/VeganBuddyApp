<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF1C5"
    android:visibility="visible"
    tools:context=".RideDetails"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="54dp"
        android:shadowColor="#292929"
        android:shadowDx="1"
        android:shadowRadius="1"
        android:text="Distance"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/rideDistance"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="54dp"
        android:duplicateParentState="false"
        android:editable="false"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/rideAddress" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="130dp"
        android:shadowColor="#292929"
        android:shadowDx="1"
        android:shadowRadius="1"
        android:text="Ride Address"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rideAddress"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="130dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="54dp"
        android:shadowColor="#292929"
        android:shadowDx="1"
        android:shadowRadius="1"
        android:text="Estimated Time"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/estimatedTime"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="54dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/rideDistance" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="54dp"
        android:shadowColor="#292929"
        android:shadowDx="1"
        android:shadowRadius="1"
        android:text="Ride Charges"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/rideCharges"
        android:layout_width="113dp"
        android:layout_height="20dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="54dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/estimatedTime" />

    <Button
        android:id="@+id/confirmRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowRadius="4"
        android:text="Confirm Ride"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rideCharges" />

    <Button
        android:id="@+id/cancelRide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowRadius="4"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmRide" />
</androidx.constraintlayout.widget.ConstraintLayout>